{
    "name": "my-awesome-package",
    "version": "1.0.0",
    "scripts": {
        "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
        "build:front": "yarn --cwd ./my-app build",
        "build:back": "yarn tsc -b",
        "prebuild": "rm -rf dist",
        "build": " yarn build:back && yarn copy-files && yarn build:front  && mv -f ./my-app/build/*  ./dist"
    },
    "dependencies": {
        "copyfiles": "2.4.1",
        "@types/chrome": "0.0.179",
        "typescript": "4.6.2"
    }
}

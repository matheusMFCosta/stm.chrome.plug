{
    "name": "troll friend",
    "version": "1.0.0",
    "scripts": {
        "copy-files": "copyfiles -u 1 background/**/*.html background/**/*.css dist/",
        "build:front": "yarn --cwd ./popup build",
        "build:back": "tsc -b",
        "start:back": "tsc -b --watch",
        "start:front": "yarn --cwd ./popup start",
        "prebuild": "rm -rf dist",
        "build": " yarn copy-files && yarn build:back && yarn build:front && mv -f ./popup/build/*  ./dist",
        "start": " yarn copy-files && yarn start:back & yarn start:front"
    },
    "dependencies": {
        "copyfiles": "2.4.1",
        "@types/chrome": "0.0.179",
        "typescript": "4.6.2"
    }
}
